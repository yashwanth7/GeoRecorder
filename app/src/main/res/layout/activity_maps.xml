<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map1"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lsyas.georecorder.MapsActivity"
    map:cameraBearing="112.5"
    map:cameraTilt="30"
    map:cameraZoom="11"
    map:cameraTargetLat="17.821436"
    map:cameraTargetLng="83.341325">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="record"
        android:padding="10dp"
        android:layout_marginTop="600dp"
        android:paddingRight="100dp"
        android:onClick="onrecord"
        android:layout_marginLeft="20px"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view records"
        android:padding="10dp"
        android:layout_marginTop="600dp"
        android:paddingRight="500dp"
        android:onClick="onclick2"
        android:layout_marginLeft="300px"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end project"
        android:padding="10dp"
        android:layout_marginTop="600dp"
        android:paddingRight="200dp"
        android:onClick="onclick3"
        android:layout_marginLeft="750px"/>
</fragment>

